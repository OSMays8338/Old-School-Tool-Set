$nomention
$setVar[currentxp;$sum[$getVar[currentxp;$authorID];$random[1;9]];$authorID]

$if[$getVar[currentxp;$authorID]>=$getVar[nextlevelxp;$authorID]]
$setVar[rank;$sum[$getVar[rank;$authorID];1];$authorID]
$setVar[nextlevelxp;$sum[$getVar[nextlevelxp;$authorID];100];$authorID]
$setVar[level;$sum[$getVar[level;$authorID];1];$authorID]
$setVar[currentxp;0;$authorID]

$color[$getRoleColor[$highestRole[$authorID]]]
$description[
**❗__Hey <@$authorID>, you have reached level $sum[$getVar[level;$authorID];1]__❗**
]
$deleteIn[15s]
$endif